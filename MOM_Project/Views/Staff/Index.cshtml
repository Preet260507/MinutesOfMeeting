@model IEnumerable<MOM_Project.Models.Staff>
@{ ViewData["Title"] = "Staff Directory"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0"><i class="bi bi-people-fill me-2"></i>Staff Directory</h2>
            <p class="text-muted mb-0">Manage your team members and their roles.</p>
        </div>
        <a asp-action="AddEdit" class="btn btn-primary shadow-sm px-4 fw-bold">
            <i class="bi bi-person-plus-fill me-2"></i>Add Staff
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Staff Name</th>
                        <th>Department</th>
                        <th>Contact Info</th>
                        <th class="text-muted small">Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@item.StaffName</div>
                                <div class="small text-muted" style="font-size: 0.75rem;">ID: #@item.StaffID</div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    <i class="bi bi-building me-1"></i> @item.DepartmentName
                                </span>
                            </td>
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    <span class="small"><i class="bi bi-envelope me-2 text-primary"></i> @(string.IsNullOrEmpty(item.EmailAddress) ? "-" : item.EmailAddress)</span>
                                    <span class="small"><i class="bi bi-phone me-2 text-success"></i> @(string.IsNullOrEmpty(item.MobileNo) ? "-" : item.MobileNo)</span>
                                </div>
                            </td>
                            <td>
                                <div class="small text-muted" style="font-size: 0.75rem;">
                                    <div>Joined: @item.Created.ToString("MMM dd, yyyy")</div>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="AddEdit" asp-route-id="@item.StaffID" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.StaffID" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="p-5 text-center text-muted">
                <i class="bi bi-people display-4 mb-3 d-block opacity-25"></i>
                <p>No staff members found.</p>
            </div>
        }
    </div>
</div>