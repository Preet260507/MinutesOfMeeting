@model MOM_Project.Models.UserProfile
@{ ViewData["Title"] = "My Profile"; }

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5 text-center">
                    
                    <div class="mb-4">
                        <img src="@Model.ProfileImagePath" 
                             alt="Profile Picture" 
                             class="rounded-circle shadow object-fit-cover border border-4 border-white"
                             style="width: 150px; height: 150px; background-color: #f8f9fa;"
                             onerror="this.src='https://cdn-icons-png.flaticon.com/512/149/149071.png';">
                    </div>

                    <h3 class="fw-bold mb-1">@Model.FullName</h3>
                    <p class="text-primary fw-bold mb-4">@Model.Department</p>

                    <div class="bg-light rounded-3 p-3 mb-4 text-start d-inline-block text-muted">
                        <div class="mb-2"><i class="bi bi-envelope-fill me-2 text-secondary"></i> @Model.Email</div>
                        <div><i class="bi bi-shield-lock-fill me-2 text-secondary"></i> System Administrator</div>
                    </div>

                    <div>
                        <a asp-action="Edit" class="btn btn-primary px-4 fw-bold shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i> Edit Profile
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>