@model MOM_Project.Models.Meeting

@{
bool isEdit = Model.MeetingID > 0;
ViewData["Title"] = isEdit ? "Edit Meeting" : "Schedule Meeting";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form asp-action="AddEdit">
                <input type="hidden" asp-for="MeetingID" />

                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header py-4 px-4 bg-primary text-white rounded-top-4">
                        <h4 class="mb-0 fw-bold">
                            <i class="bi @(isEdit ? "bi-pencil-square" : "bi-calendar-plus") me-2"></i>
                            @(isEdit ? "Edit Meeting Details" : "Schedule New Meeting")
                        </h4>
                    </div>

                    <div class="card-body p-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="MeetingDescription" class="form-control" placeholder="Subject" />
                            <label asp-for="MeetingDescription">Meeting Subject / Agenda</label>
                            <span asp-validation-for="MeetingDescription" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="MeetingTypeID" class="form-select" asp-items="ViewBag.Types">
                                        <option value="">-- General Meeting --</option>
                                    </select>
                                    <label asp-for="MeetingTypeID">Meeting Type</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="MeetingVenueID" class="form-select" asp-items="ViewBag.Venues">
                                        <option value="">-- Select Venue --</option>
                                    </select>
                                    <label asp-for="MeetingVenueID">Venue</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="MeetingDate" class="form-control" type="date" />
                                    <label asp-for="MeetingDate">Date</label>
                                    <span asp-validation-for="MeetingDate" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="StartTime" class="form-control" type="time" />
                                    <label asp-for="StartTime">Start Time</label>
                                    <span asp-validation-for="StartTime" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="EndTime" class="form-control" type="time" />
                                    <label asp-for="EndTime">End Time</label>
                                    <span asp-validation-for="EndTime" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Remarks" class="form-control" placeholder="Remarks" style="height: 100px"></textarea>
                            <label asp-for="Remarks">Remarks / Notes</label>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-light btn-lg px-4 text-secondary fw-bold">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg px-5 fw-bold shadow-sm">
                                @(isEdit ? "Update Meeting" : "Schedule Meeting")
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>