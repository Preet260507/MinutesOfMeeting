@model MOM_Project.Models.Staff
@{ ViewData["Title"] = "Delete Staff"; }

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                
                <div class="card-header bg-danger text-white p-4 rounded-top-4">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Confirmation
                    </h4>
                </div>

                <div class="card-body p-5">
                    <div class="alert alert-warning text-center mb-4">
                        <i class="bi bi-info-circle me-2"></i>
                        Are you sure you want to delete this staff member?
                        <br><strong>This action cannot be undone.</strong>
                    </div>

                    <div class="list-group list-group-flush mb-4 rounded border">
                        <div class="list-group-item p-3">
                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Staff Name</small>
                            <div class="fs-5 fw-bold text-dark">@Model.StaffName</div>
                        </div>
                        <div class="list-group-item p-3">
                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Email Address</small>
                            <div class="fs-6">@(string.IsNullOrEmpty(Model.EmailAddress) ? "-" : Model.EmailAddress)</div>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" name="id" value="@Model.StaffID" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-light btn-lg px-4 text-secondary fw-bold">Cancel</a>
                            <button type="submit" class="btn btn-danger btn-lg px-5 fw-bold shadow-sm">
                                <i class="bi bi-trash-fill me-2"></i>Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>