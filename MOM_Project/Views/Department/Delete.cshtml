@model MOM_Project.Models.Department
@{ ViewData["Title"] = "Delete Department"; }

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle bg-danger bg-opacity-10 d-inline-flex p-3">
                        <i class="bi bi-exclamation-triangle-fill text-danger fs-1"></i>
                    </div>
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger shadow-sm mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.ErrorMessage
                    </div>
                }
                <h4 class="fw-bold text-dark">Delete Department?</h4>
                <p class="text-muted">Are you sure you want to delete <strong>@Model.DepartmentName</strong>? This action cannot be undone.</p>
                
                <form asp-action="Delete" asp-route-id="@Model.DepartmentID" class="mt-3">
                    <input type="hidden" asp-for="DepartmentID" />
                    <a asp-action="Index" class="btn btn-light border px-4">Cancel</a>
                    <button type="submit" class="btn btn-danger px-4 ms-2">Yes, Delete It</button>
                </form>
            </div>
        </div>
    </div>
</div>