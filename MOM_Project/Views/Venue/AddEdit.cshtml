@model MOM_Project.Models.MeetingVenue

@{
    // Safety check if Model is null
    if (Model == null) { throw new Exception("Model is null. Controller must return View(model)."); }
    
    bool isEdit = Model.MeetingVenueID > 0;
    ViewData["Title"] = isEdit ? "Edit Venue" : "Add Venue";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header py-3 @(isEdit ? "bg-warning-subtle text-warning-emphasis" : "bg-primary text-white")">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi @(isEdit ? "bi-pencil-square" : "bi-building-add") me-2"></i>
                        @(isEdit ? "Edit Venue" : "Add New Venue")
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddEdit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="MeetingVenueID" />

                        <div class="mb-4">
                            <label asp-for="MeetingVenueName" class="form-label fw-bold">Venue Name</label>
                            <input asp-for="MeetingVenueName" class="form-control" placeholder="e.g. Conference Room A, Zoom Link" />
                            <span asp-validation-for="MeetingVenueName" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn @(isEdit ? "btn-warning" : "btn-primary") px-4 fw-bold">
                                @(isEdit ? "Update" : "Create")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}