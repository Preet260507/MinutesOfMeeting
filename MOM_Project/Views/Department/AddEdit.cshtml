@model MOM_Project.Models.Department

@{
    // Safety check if Model is null
    if (Model == null) { throw new Exception("Model is null. Controller must return View(model)."); }
    
    bool isEdit = Model.DepartmentID > 0;
    ViewData["Title"] = isEdit ? "Edit Department" : "Add Department";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3">
                
                <div class="card-header py-3 @(isEdit ? "bg-warning-subtle text-warning-emphasis" : "bg-primary text-white")">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi @(isEdit ? "bi-pencil-square" : "bi-building-add") me-2"></i>
                        @(isEdit ? "Edit Department" : "Add New Department")
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="AddEdit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="DepartmentID" />

                        <div class="form-floating mb-4">
                            <input asp-for="DepartmentName" class="form-control" placeholder="Department Name" />
                            <label asp-for="DepartmentName">Department Name</label>
                            <span asp-validation-for="DepartmentName" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-light text-secondary">Cancel</a>
                            
                            <button type="submit" class="btn @(isEdit ? "btn-warning" : "btn-primary") px-4 fw-bold">
                                @(isEdit ? "Update" : "Create")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
}