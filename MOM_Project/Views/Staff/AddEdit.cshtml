@model MOM_Project.Models.Staff

@{
    if (Model == null) { throw new Exception("Model is null."); }
    bool isEdit = Model.StaffID > 0;
    ViewData["Title"] = isEdit ? "Edit Staff" : "Add Staff";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                
                <div class="card-header py-4 px-4 @(isEdit ? "bg-warning-subtle text-warning-emphasis" : "bg-primary text-white") rounded-top-4">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi @(isEdit ? "bi-pencil-square" : "bi-person-plus-fill") me-2"></i>
                        @(isEdit ? "Edit Staff Profile" : "Add New Staff Member")
                    </h4>
                </div>

                <div class="card-body p-5">
                    <form asp-action="AddEdit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
                        
                        <input type="hidden" asp-for="StaffID" />

                        <div class="form-floating mb-4">
                            <input asp-for="StaffName" class="form-control form-control-lg" placeholder="Full Name" />
                            <label asp-for="StaffName">Full Name <span class="text-danger">*</span></label>
                            <span asp-validation-for="StaffName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="DepartmentID" class="form-select form-select-lg" asp-items="ViewBag.Departments">
                                <option value="">-- Select Department --</option>
                            </select>
                            <label asp-for="DepartmentID">Department</label>
                        </div>

                        <hr class="my-4 text-muted opacity-25">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Contact Details</h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="MobileNo" class="form-control" placeholder="Mobile" />
                                    <label asp-for="MobileNo">Mobile Number</label>
                                    <span asp-validation-for="MobileNo" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="EmailAddress" class="form-control" placeholder="Email" type="email" />
                                    <label asp-for="EmailAddress">Email Address</label>
                                    <span asp-validation-for="EmailAddress" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                            <a asp-action="Index" class="btn btn-light btn-lg px-4 text-secondary fw-bold">Cancel</a>
                            <button type="submit" class="btn @(isEdit ? "btn-warning" : "btn-primary") btn-lg px-5 fw-bold shadow-sm">
                                @(isEdit ? "Update Profile" : "Create Account")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
}