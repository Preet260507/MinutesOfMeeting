@model MOM_Project.Models.UserProfile
@{ ViewData["Title"] = "Edit Profile"; }

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="UserID" />

                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white p-4 rounded-top-4">
                        <h4 class="mb-0 fw-bold"><i class="bi bi-person-gear me-2"></i>Edit Profile Details</h4>
                    </div>

                    <div class="card-body p-5">
                        
                        <div class="row mb-5 align-items-center">
                            <div class="col-auto">
                                <img src="@Model.ProfileImagePath" alt="Current Image" class="rounded-circle shadow-sm object-fit-cover" style="width: 100px; height: 100px;" onerror="this.src='https://cdn-icons-png.flaticon.com/512/149/149071.png';">
                            </div>
                            <div class="col">
                                <label asp-for="ProfilePictureUpload" class="form-label fw-bold">Update Profile Picture</label>
                                <input asp-for="ProfilePictureUpload" class="form-control" type="file" accept="image/*" />
                                <small class="text-muted">Leave blank to keep current picture. (Recommended: Square image)</small>
                            </div>
                        </div>

                        <hr class="mb-4 opacity-25">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FullName" class="form-control" placeholder="Name" />
                                    <label asp-for="FullName">Full Name</label>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Department" class="form-control" placeholder="Department" />
                                    <label asp-for="Department">Department / Title</label>
                                    <span asp-validation-for="Department" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email">Email Address</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer p-4 bg-light d-flex justify-content-end gap-2 rounded-bottom-4">
                        <a asp-action="Index" class="btn btn-light px-4 text-secondary fw-bold">Cancel</a>
                        <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm">Save Changes</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>